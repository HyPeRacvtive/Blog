@model CatergoryListDto


@{
    ViewData["Title"] = "Index";
}
@if (Model.ResultStatus == ResultStatus.Success)
{

    <div id="ModalPlaceHolder" aria-hidden="true"></div>


    <div class="card mb-4 mt-3">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            Kategori Listesi
        </div>
        <div class="card-body">
            <div class="spinner-border" role="status" style="display:none">
                <span class="sr-only">Yükleniyor...</span>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered" id="categoriesTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Adı</th>
                            <th>Açıklaması</th>
                            <th>Aktif Mi?</th>
                            <th>Silinmiş Mi?</th>
                            <th>Not</th>
                            <th>Oluşturulma Tarihi</th>
                            <th>Oluşturan Kullanıcı</th>
                            <th>Son Düzenlenme Tarihi</th>
                            <th>Son Düzenleyen Kullanıcı Adı</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Adı</th>
                            <th>Açıklaması</th>
                            <th>Aktif Mi?</th>
                            <th>Silinmiş Mi?</th>
                            <th>Not</th>
                            <th>Oluşturulma Tarihi</th>
                            <th>Oluşturan Kullanıcı</th>
                            <th>Son Düzenlenme Tarihi</th>
                            <th>Son Düzenleyen Kullanıcı Adı</th>
                            <th>İşlemler</th>
                        </tr>
                    </tfoot>
                    <tbody>

                        @foreach (var Cat in Model.Categories)
                        {
                            <tr name="@Cat.Id">
                                <td>@Cat.Id</td>
                                <td>@Cat.Name</td>
                                <td>@Cat.Description</td>
                                <td>@Cat.IsActive</td>
                                <td>@Cat.IsDeleted</td>
                                <td>@Cat.Note</td>
                                <td>@Cat.CreatedDate.ToShortDateString()</td>
                                <td>@Cat.CreatedByName</td>
                                <td>@Cat.ModifiedDate.ToShortDateString()</td>
                                <td>@Cat.ModifiedByName</td>
                                <td>
                                    <button class="btn btn-primary btn-sm btn-update" data-id="@Cat.Id"><span class="fas fa-edit"></span></button>
                                    <button class="btn btn-danger  btn-sm btn-delete" data-id="@Cat.Id"><span class="fas fa-minus-circle"></span></button>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
@if (Model.ResultStatus == ResultStatus.Error)
{
    <div class="alert alert-danger mt-3" role="alert">
        @Model.Message <br />

        DashBoard Sayfasına Geri Dönmek için Lütfen <a class="alert-link" asp-area="Admin" asp-controller="Home" asp-action="Index">Tıklayınız</a>
    </div>
}



@section Script{
<script src="~/js/categoryIndex.js" type="application/ecmascript"></script>
}
